
#include <iostream>
 
using namespace std;
 
int main() {
    int tab[3][3], suma = 0, suma_w = 0, suma_k = 0, suma_p1 = 0, suma_p2 = 0;
 
    cout << "Podaj 9 liczb do tablicy 3x3:" << endl;
    for (int i = 0; i < 3; i++) 
        for (int j = 0; j < 3; j++) 
            cin >> tab[i][j];
 
    for (int j = 0; j < 3; j++) 
        suma += tab[0][j];
 
    for (int i = 0; i < 3; i++) {
        suma_w = suma_k = 0;
        for (int j = 0; j < 3; j++) {
            suma_w += tab[i][j];  
            suma_k += tab[j][i];  
        }
        if (suma_w != suma || suma_k != suma) {
            cout << "Tablica nie jest kwadratem magicznym" << endl;
            return 0;
        }
        suma_p1 += tab[i][i];       
        suma_p2 += tab[i][2 - i];   
    }
 
    if (suma_p1 == suma && suma_p2 == suma)
        cout << "Tablica jest kwadratem magicznym" << endl;
    else
        cout << "Tablica nie jest kwadratem magicznym" << endl;
 
    return 0;
}
